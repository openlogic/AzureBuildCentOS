+static inline bool netvsc_set_hash(u32 *hash, struct sk_buff *skb)
+{
+	struct iphdr *iphdr;
+	struct ipv6hdr *ipv6hdr;
+	struct tcphdr *tcphdr;
+	__be32 dbuf[9];
+	int data_len = 0;
+
+	skb_reset_mac_header(skb);
