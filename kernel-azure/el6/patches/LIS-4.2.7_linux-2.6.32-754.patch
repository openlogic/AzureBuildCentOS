+				data_len = 36;
+			}
+		}
+	}
+
+	/* if data_len is 0, we are not able to compute the RSS hash. */
+	if (data_len == 0)
+		return false;
+
+	*hash = comp_hash(netvsc_hash_key, HASH_KEYLEN, dbuf, data_len);
+	return true;
